{
  "type": "object",
  "properties": {
    "event": {
      "enum": [ "DRIVER_MISSES_CUSTOMER" ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "location": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "elevation": {
          "type": "integer",
          "minimum": -32768,
          "maximum": 32767
        }
      },
      "additionalProperties": false
    },
    "employee": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "jobRole": {
          "enum": [ "JNR_DRIVER", "SNR_DRIVER" ]
        }
      },
      "additionalProperties": false
    },
    "package": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        }
      },
      "required": [ "id" ],
      "additionalProperties": false
    },
    "customer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "isVip": {
          "type": "boolean"
        }
      },
      "required": [ "id", "isVip" ],
      "additionalProperties": false
    }
  },
  "required": [ "event", "timestamp", "employee", "package", "customer", "location" ],
  "additionalProperties": false
}
